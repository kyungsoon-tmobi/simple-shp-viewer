{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "parser": "babel",
    "plugins": ["prettier-plugin-organize-imports"],
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        },
        {
            "files": [".prettierrc", "*.json"],
            "options": { "parser": "json" }
        }
    ]
}
